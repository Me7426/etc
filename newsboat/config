auto-reload yes
cleanup-on-quit yes

browser open -a /Applications/Safari.app %u

bind-key k up
bind-key j down
bind-key H home
bind-key G end

keep-articles-days 365

color background   default   default
color listnormal   color240 default
color listfocus    white color27
color info         white   color240
color article      default   default
color listnormal_unread color226 default
color listfocus_unread color226 color27

# highlights
highlight article "^(Title):.*$" color27 default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
