cd ~/.vim/bundle
git rm -f --cached YouCompleteMe
rm -rf YouCompleteMe/
gsed -i '/YouCompleteMe/d' ~/.xiaket/etc/.gitmodules
gsed -i '/YouCompleteMe/d' ~/.xiaket/etc/.git/config
rm -rf ~/.xiaket/etc/.git/modules/YouCompleteMe
rm -rf ~/.xiaket/etc/.git/modules/vim/bundle/YouCompleteMe
git submodule add https://github.com/Valloric/YouCompleteMe.git
cd ~/.vim/bundle/YouCompleteMe
git submodule update --init --recursive && ./install.py
