[alias]
    ci = commit
    st = status
    co = checkout
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pulls = "!f() { git pull --squash -s recursive "$1" master; }; f"
	g = grep --break --heading --line-number
    pr = pull --rebase

[core]
	excludesfile = ~/.xiaket/etc/gitignore_global
	pager = cat
[push]
	default = simple
[color]
	ui = true
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[init]
	templatedir = ~/.git_template
[grep]
	extendRegexp = true
	lineNumber = true
[branch]
