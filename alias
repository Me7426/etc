# GNU rules.
alias ls='myls'
alias ll='gls $LS_OPTIONS -lh'
alias la='gls -a'
alias l='gls -lF'
alias rm='grm'
alias vi='vim'

# Generic 
alias su='su -'
alias df='df -h'
alias nettop='nettop -nm tcp'
alias diff='colordiff'

# Typos
alias clera='clear'
alias ls-l='ls -l'
alias mkae='make'
alias maek='make'

# Acesssibilities
alias c='clear'
alias md='mkdir -p'
alias which='type -p'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias rc='find . -name "*.pyc" -delete'
